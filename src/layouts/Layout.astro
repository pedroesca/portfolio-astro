---
interface Props {
  title: string;
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    @apply bg-white tracking-tight;
    font-family:
      JetBrains Mono,
      monospace;
  }

  body,
  figure {
    @apply m-0 p-0;
  }

  a {
    text-decoration: none;
  }

  ul {
    @apply m-0 p-0 list-none;
  }

  *, *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  article {
    @apply break-inside-avoid;
  }
  p {
    @apply text-gray-500 text-pretty text-sm m-0;
  }
</style>
